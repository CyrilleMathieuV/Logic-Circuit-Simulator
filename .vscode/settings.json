{
    "eslint.enable": true,
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "files.watcherExclude": {
        "**/target": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "index.html": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "ltex.enabled": false,
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "compile",
                    "commands": [
                        "npm run compile-watch"
                    ]
                },
                {
                    "name": "lint",
                    "commands": [
                        "npm run lint-watch"
                    ]
                },
                {
                    "name": "bundle",
                    "commands": [
                        "npm run bundle-watch"
                    ]
                },
                {
                    "name": "server",
                    "commands": [
                        "npm run server"
                    ]
                },
                {
                    "name": "bash",
                    "commands": [
                        "ls"
                    ]
                },
            ]
        }
    ]
}
